[Unit]
Description=Airflow scheduler daemon
After=network.target

[Service]
Environment="AIRFLOW_HOME={{ airflow_install_directory }}"
User={{ airflow_user }}
Group={{ airflow_user }}
Type=simple
ExecStart=/bin/bash -c 'exec /usr/local/bin/airflow scheduler {{ airflow_scheduler_arguments }} 2>&1 >> {{ base_log_folder }}/airflow-worker.log'
Restart=always
RestartSec=11s

[Install]
WantedBy=multi-user.target
